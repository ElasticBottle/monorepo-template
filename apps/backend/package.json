{
  "name": "@rectangular-labs/backend",
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/routes/index.ts",
      "default": "./src/routes/index.ts"
    }
  },
  "scripts": {
    "dev": "pnpm with-env vite dev --port 3922",
    "build": "pnpm with-env-prod vite build",
    "serve": "pnpm with-env-prod node ./dist/index.js",
    "test": "vitest run",
    "clean": "git clean -xdf .turbo node_modules dist .cache",
    "format": "bun x @biomejs/biome format . --write",
    "lint": "bun x @biomejs/biome lint . --write",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "with-env": "dotenvx run -f ../../.env.local  -f ../../.env -- ",
    "with-env-prod": "dotenvx run -f ../../.env -- "
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@rectangular-labs/db": "workspace:*",
    "@rectangular-labs/schema": "workspace:*",
    "hono": "^4.7.4"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.3.0",
    "@hono/vite-dev-server": "^0.19.0",
    "@rectangular-labs/typescript": "workspace:*",
    "@types/node": "^22.13.10",
    "tsx": "^4.19.3",
    "vite": "^6.1.0",
    "vite-plugin-mkcert": "^1.17.8",
    "vitest": "^3.0.5"
  }
}
